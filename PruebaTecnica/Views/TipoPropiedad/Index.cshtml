@model List<PruebaTecnica.Models.TipoPropiedad>
@{
    ViewData["Title"] = "Ingrese el nuevo tipo de propiedad";
}
<h1>@ViewData["Title"]</h1>



<form asp-action="Create">
    <div class="mb-3 mt-3">
        <label for="email" class="form-label">Tipo de propiedad:</label>
        <input type="text" class="form-control" id="tipo" placeholder="" name="descripcion" required>
        
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
</form>
<br />


<table class="table">
    <thead>
        <tr>
           @* <th scope="col">ID</th>*@
            <th scope="col">Tipo de propiedad</th>
            <th scope="col">Eliminar</th>
            <th scope="col">Editar</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var proType in Model)
        {
            <tr>

                @*<th scope="row">@proType.Id</th>*@
                <td scope="row">@proType.Descripcion</td>
                <td scope="row"><a asp-action="Delete" class="btn btn-danger" asp-route-id="@proType.Id">🗑️</a>  </td>
                <td scope="row"><a asp-action="Edit" class="btn btn-info" asp-route-id="@proType.Id" >
🖊️</a></td>

            </tr>
        }
    </tbody>
</table>

